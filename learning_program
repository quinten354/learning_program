version = '3.1'

import subprocess
import sys
import logging
import datetime
import signal
import os

logging.basicConfig(filename = <path_to_log>, level = logging.ERROR)
signal.signal(signal.SIGINT, signal.SIG_IGN)

def log():
    logging.exception(str(datetime.datetime.now()))

def help():
    print(' ~ learning program ' + str(version) + ' ~ ')
    print()
    print('This program helps you to learn words, sentences, grammar en more.')
    print('You can create lists that you can learn, review, and more.')
    print('If you want to splits, combine, delete, adjust, export or import list(s), it can.')
    print()
    print('-e, -i:                                      gives extra information')
    print('-q:                                          quiet')
    print()
    print('help, --help, -h:                            show this help menu and exit')
    print('version, --version, -v:                      show the version and exit')
    print('users, --users, -u:                          show the availeble users and exit')
    print('create, --create, -c <username>:             create new user if it not exist')
    print('delete, --delete, del, --del, -d <username>: delete user if it exist')
    print('login, --login, -l <username>:               log in with this username')
    print('log, --log, -L:                              get the data in the log file')
    print('logpath, --logpath:                          get the path of the log file')
    print('update, --update, -U:                        update the program with downloaded new version')
    print('name, --name, -n <username>:                 log in with the username for the command run')
    print('run, --run, -r <command> <option(s)>:        run a command in the program, you must log in with the command name')
    print()
    print('Commands for run:')
    print('NONE')
    print()

    if os.name == 'nt': input('Press enter to continue. ')

def run(*args):
    try:
        command = [sys.executable, <path_to___init__.py>] + list(args)
        subprocess.run(command)
    except Exception as error:
        log()
        print(error)
        if os.name == 'nt': input('Press enter to close the program. ')

args = sys.argv
if len(args) == 1:
    run()

elif args[1] in ['version', '--version', '-v']:
    if len(args) == 2:
        print(version)
        if os.name == 'nt': input('Press enter to continue. ')
    else:
        print('Unknown option(s): ' + str(args[2:])[1:-1])
        if os.name == 'nt': input('Press enter to continue. ')

elif args[1] in ['help', '--help', '-h']:
    if len(args) == 2:
        help()
    else:
        print('Unknown option(s): ' + str(args[2:])[1:-1])
        if os.name == 'nt': input('Press enter to continue. ')

else:
    run(*args[1:])

